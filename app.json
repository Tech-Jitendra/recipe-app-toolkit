{
  "expo": {
    "name": "recipe-app-toolkit",
    "slug": "recipe-app-toolkit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/flash_icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icons/slider_icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/red_cross_close.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
